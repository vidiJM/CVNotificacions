<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanc">

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/usuariEditText"
        android:layout_above="@+id/passwordEditText"
        android:inputType="text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:focusable="true"
        android:hint="Usuari"
        android:textAlignment="center"
        android:textColorHint="@color/negre"
        android:textColor="@color/negre"
        android:enabled="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/passwordEditText"
        android:hint="Password"
        android:textAlignment="center"
        android:layout_marginBottom="45dp"
        android:layout_above="@+id/botoLogin"
        android:layout_centerHorizontal="true"
        android:textColorHint="@color/negre"
        android:textColor="@color/negre" />

    <Button
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:text="ENTRAR"
        android:id="@+id/botoLogin"
        android:layout_marginBottom="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/blanc"
        android:background="@color/negre" />

    <ImageView
        android:layout_width="700dp"
        android:layout_height="120dp"
        android:id="@+id/logoUAB"
        android:src="@mipmap/logo_cv"
        android:layout_above="@+id/usuariEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp" />

</RelativeLayout>